<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="connection.url">jdbc:postgresql://localhost:5432/library_test</property>
    <property name="connection.driver_class">org.postgresql.Driver</property>
    <property name="hibernate.connection.username">postgres</property>
    <property name="hibernate.connection.password">23322332</property>
    <!--<property name="connection_pool_size">1</property>-->
    <!--<property name="hbm2ddl.auto">validate</property>-->
    <property name="show_sql">true</property>
    <!--<property name="dialect">org.hibernate.dialect.PostgreSQLDialect</property>-->
    <mapping class="library.dataAccess.hibernate.entities.AuthorHiber"/>
    <mapping class="library.dataAccess.hibernate.entities.BookHiber"/>
    <mapping class="library.dataAccess.hibernate.entities.BookAuthorHiber"/>
    <mapping class="library.dataAccess.hibernate.entities.GenreHiber"/>
    <!-- DB schema will be updated if needed -->
    <!-- <property name="hbm2ddl.auto">update</property> -->
  </session-factory>
</hibernate-configuration>